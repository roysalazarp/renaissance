{
    "name": "Debian",
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
    "forwardPorts": [8080],
    "customizations": {
        "vscode": {
            "extensions": ["ms-vscode.cpptools-themes", "eamodio.gitlens", "ms-vscode.hexeditor", "esbenp.prettier-vscode", "rangav.vscode-thunder-client", "ms-vscode.cpptools"]
        }
    },
    "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"]
}
